<UserControl
    x:Class="XboxDesktopLauncher.Components.PivotContainer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:XboxDesktopLauncher.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="500">

    <muxc:NavigationView
            x:Name="navbar"
            PaneDisplayMode="Top" 
            SelectionFollowsFocus="Enabled"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            ItemInvoked="ItemInvoke">
        <muxc:NavigationView.MenuItems>
            <muxc:NavigationViewItem Icon="Home" Content="Home" Tag="home"/>
            <muxc:NavigationViewItem Icon="Play" Content="Games" Tag="games"/>
        </muxc:NavigationView.MenuItems>
        <Grid Padding="24">
            <ContentPresenter Content="{x:Bind ContentFrame}" />
        </Grid>
    </muxc:NavigationView>
</UserControl>
